@model Bonline.Models.Account

@{
    ViewBag.Title = "Register";
}
<!DOCTYPE html>
<h2>Register</h2>
@Styles.Render("~/Content/Site.css")
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Account</h4>
        <hr />
	    <div class="form-group">
		    @Html.LabelFor(model => model.Email, htmlAttributes: new {@class = "control-label col-md-2"})
		    <div class="col-md-10">
			    <p>@ViewBag.Message1</p> 
			    @Html.TextBoxFor(model => model.Email, new {htmlAttributes = new {@class = "form-control"}})
		    </div>
	    </div>
	

	    <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
	        <div class="col-md-10">
		        <p>@ViewBag.Message2</p> 
		        @Html.TextBoxFor(model => model.Password , new {@class = "boo" , Type = "password"  })
	        </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}