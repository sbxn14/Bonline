@model List<Bonline.Models.Account>

@{
 ViewBag.Title = "Accounts";
}
<!DOCTYPE html>
@using (Html.BeginForm())
{
 <h2>Accounts</h2>
 <input class="form-control" id="myInput" type="text" placeholder="Zoek..." />
 <br />
 <table style="width: 100%">
  <thead>
   <tr>
    <th>Id</th>
    <th>Inactief</th>
   </tr>
  </thead>
  <tbody>
   @foreach (var item in Model)
   {
   <tr>
    <td>
     @Html.DisplayFor(modelItem => item.Id)
    </td>
    <td>
     @Html.DisplayFor(modelItem => item.Inactief)
    </td>
    <td>
     @using (Html.BeginForm("Accounts", "Account", FormMethod.Post))
	{
     @Html.AntiForgeryToken()
     <input type="hidden" value="@item.Id" name="AccountId" />
      <input type="hidden" value="@item.Inactief" name="AccountInactief" />
      <input type="submit" value="Toggle"/>
	}
    </td>
   </tr>
   }
  </tbody>
 </table>
}
@Scripts.Render("~/Scripts/Filter.js")