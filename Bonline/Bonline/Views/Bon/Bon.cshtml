@model List<Bonline.Models.Bon>
@Styles.Render("~/Content/Site.css")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Styles.Render("~/Content/bootstrap")
@{
 ViewBag.Title = "Bon";
}
<h2>Bon</h2>
<!-- The Modal -->
<div id="myModal" class="modal fade" role="dialog">
 <div class="modal-dialog">

  <!-- Modal content -->
  <div class="modal-content">
   <div class="modal-header">
    <button class="close" type="button" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">This is a Title.</h4>
   </div>
   <div class="modal-body">
    <p>Some text in the Modal..</p>
   </div>
   <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
   </div>
  </div>

 </div>
</div>

<input class="form-control" id="myInput" type="text" placeholder="KUT SIMON MET JE KUT KOP" />
<br />
<table style="width: 100%">
 <thead>
  <tr>
   <th>Id</th>
   <th>Datum</th>
   <th>Boodschappen</th>
  </tr>
 </thead>
 <tbody id="myTable">

  @foreach (var item in Model)
  {
  <tr>
   <td>
    @Html.DisplayFor(model => item.Id) &nbsp;
   </td>


   <td>
    @Html.DisplayFor(model => item.Date)&nbsp;

   </td>


   <td>
    @Html.DisplayFor(model => item.Description)&nbsp;

   </td>


   <td>

    <a class="btn btn-info btn-md" data-toggle="modal" data-target="#myModal">


     View
    </a>
   </td>
  </tr>

  }
 </tbody>
</table>
@Scripts.Render("~/Scripts/Modal.js")

@Scripts.Render("~/Scripts/Filter.js")


